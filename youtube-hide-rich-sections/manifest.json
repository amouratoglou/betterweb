{
  "manifest_version": 3,
  "name": "BetterWeb",
  "version": "1.0.0",
  "description": "Hides the horrid shorts section on YouTube.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "homepage_url": "https://github.com/amouratoglou/betterweb",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
